{
    "version": 2,
    "builds": [
      { "src": "api/*.js", "use": "@vercel/node" },
      { "src": "public/**", "use": "@vercel/static" }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "/api/$1" },
      { "src": "/(.*)", "dest": "/public/$1" }
    ],
    "env": {
      "FORGE_CLIENT_ID": "@forge_client_id",
      "FORGE_CLIENT_SECRET": "@forge_client_secret"
    }
  }