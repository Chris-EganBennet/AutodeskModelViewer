{
    "version": 2,
    "builds": [
      { "src": "api/*.js", "use": "@vercel/node" },
      { "src": "public/**", "use": "@vercel/static" }
    ],
    "routes": [
      { "src": "/api/token", "dest": "/api/token.js" },
      { "src": "/api/qrcode/(.*)", "dest": "/api/qrcode/[urn].js?urn=$1" },
      { "src": "/api/check-translation/(.*)", "dest": "/api/check-translation/[urn].js?urn=$1" },
      { "src": "/(.*)", "dest": "/public/$1" }
    ],
    "env": {
      "FORGE_CLIENT_ID": "${FORGE_CLIENT_ID}",
      "FORGE_CLIENT_SECRET": "${FORGE_CLIENT_SECRET}"
    }
  }